<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Task</title>
        <script
            src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    </head>
    <body class="bg-zinc-900 w-full flex flex-col color-white">
        <form action="/create"method="POST">
            <div class=" flex flex-col gap-5 mt-5 ml-4 mr-4 ">
                <input type="text"
                    class="bg-zinc-800  h-10 p-4 rounded-xl text-white placeholder-white "
                    placeholder="Enter title"name="title">
                <textarea name="description"id="description" placeholder="enter description"
                    class="bg-zinc-800  h-30 p-4 mb-4  rounded-xl text-white placeholder-white " ></textarea>
                <button type="submit"
                    class="bg-blue-800 h-10 w-30 rounded-xl shadow shadow-white font-bold">Submit</button>
            </div>
        </form>
    
          <div class="tasks mt-5 ml-4 mr-4 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3">

        <% if (files.length > 0) { %>

            <% files.forEach((val) => { %>
                <div class="task w-full bg-zinc-800 px-3 py-4 rounded-lg">
                    <h1 class="text-white tracking-tighter text-3xl">
          <%= val %>

                    </h1>
                    <a href="/description/<%=val%>"class="text-blue-500 mt-3 inline-block">
                        Read More
                    </a>
                </div>
            <% }) %>

        <% } else { %>

            <h3 class="text-white">No task yet</h3>

        <% } %>

    </div>

    </body>
</html>
